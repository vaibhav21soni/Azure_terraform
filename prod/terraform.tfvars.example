# Example Terraform variables file for production environment
# Copy this file to terraform.tfvars and update with your actual values

# Resource Groups
Resource_Group = [
  {
    location = "westus"
    name     = "main"
    tags = {
      "environment" = "production"
      "project"     = "<app-name>"
      "owner"       = "<company-name>"
    }
  }
]

# Action Groups for monitoring
Action_Group = [
  {
    enabled        = true
    location       = "global"
    name          = "prod_alerts"
    resource_group = "main"
    short_name    = "PRD_ALERTS"
    
    email_receiver = [{
      email_address = "<admin-email>@<company-domain>"
      name          = "admin-email"
    }]
    
    webhook_receiver = []
  }
]

# Storage Accounts
Storage_Accounts = [
  {
    account_replication_type = "GRS"
    account_tier            = "Standard"
    location               = "westus"
    name                   = "prodstorageaccount"
    resource_group         = "main"
    
    tags = {
      "environment" = "production"
      "purpose"     = "general-storage"
    }
    
    network_rules = [{
      default_action = "Deny"
      ip_rules       = ["<your-office-ip>"]
    }]
  }
]
